<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/cca_progressBar"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/whiteprogress"
        android:layout_width="220dp"
        android:paddingRight="20dp"
        android:progress="85"
        android:max="10"
        android:layout_height="22dp"
        android:background="@null"
        android:layout_marginLeft="@dimen/ms__popup_padding_left"
        android:indeterminateTint="@android:color/white"
        android:layout_marginStart="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/detail_imageButton"
        android:layout_width="40dip"
        android:layout_height="40dip"
        app:srcCompat="@drawable/exclamation"
        android:layout_marginRight="@dimen/ms__popup_padding_left"
        android:onClick="onClick"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:minWidth="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />

    <TextView
        android:id="@+id/ccapoints"
        android:paddingRight="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 pts"
        android:layout_below="@+id/cca_progressBar"
        android:layout_alignEnd="@+id/cca_progressBar" />

    <TextView
        android:id="@+id/ccalabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEADERSHIP"
        android:textColor="@color/darkgrey"
        android:layout_marginStart="15dp"

        android:layout_alignStart="@+id/cca_progressBar" />
</RelativeLayout>