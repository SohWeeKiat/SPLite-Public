<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CCA6.0_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mapp.com.sg.splite.CCAViewerUI.cca_chart"
    >

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CCA6.0_ProgressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:text="@string/cca_point"
        android:textColor="@color/white"
        android:textSize="54sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageplaceholder"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/number_tv"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/number_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Gold Achieved"

        android:textColor="@color/white"
        android:layout_below="@+id/imageplaceholder"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_below="@id/number_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

    <ListView
        android:id="@+id/cca_list"
        android:minHeight="56dp"
        android:layout_width="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="wrap_content"
        style="@style/customScrollBar"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
