<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/ccacomponentgroupbackground">

    <TextView
        android:id="@+id/number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignTop="@+id/groupname_tv"
        android:layout_toStartOf="@+id/groupname_tv"
        android:layout_marginEnd="30dp"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/groupname_tv"
        android:text="TOTAL"
        android:textSize="12dp"
        android:layout_below="@+id/number_tv" />

    <ImageView
        android:id="@+id/group_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="19dp"

        android:src="@drawable/bar" />

    <TextView
        android:id="@+id/groupname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/group_img"
        android:layout_marginLeft="12dp"
        android:text="chenyi"
        android:textSize="18sp"/>

</RelativeLayout>